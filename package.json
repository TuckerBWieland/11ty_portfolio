{
    "name": "tucker-wieland-portfolio",
    "version": "1.0.0",
    "description": "Tucker Wieland's professional portfolio website",
    "main": "index.js",
    "scripts": {
        "build": "npx @11ty/eleventy",
        "build:production": "npm ci --include=dev && npx @11ty/eleventy",
        "build:css": "tailwindcss -i ./src/styles/main.css -o ./_site/styles/main.css --minify",
        "dev": "eleventy --serve --watch",
        "start": "npm run dev",
        "lint": "npm run lint:css && npm run lint:format",
        "lint:css": "stylelint src/styles/**/*.css",
        "lint:css:fix": "stylelint src/styles/**/*.css --fix",
        "lint:format": "prettier --check \"src/**/*.{css,njk,json,md}\"",
        "lint:format:fix": "prettier --write \"src/**/*.{css,njk,json,md}\"",
        "lint:fix": "npm run lint:css:fix && npm run lint:format:fix"
    },
    "keywords": [
        "portfolio",
        "strategy",
        "operations"
    ],
    "author": "Tucker Wieland",
    "license": "MIT",
    "devDependencies": {
        "@11ty/eleventy": "^3.1.2",
        "autoprefixer": "^10.4.16",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "postcss": "^8.4.32",
        "postcss-cli": "^11.0.0",
        "prettier": "^3.3.3",
        "stylelint": "^16.23.1",
        "stylelint-config-standard": "^39.0.0",
        "stylelint-config-tailwindcss": "^1.0.0",
        "tailwindcss": "^3.4.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "lint-staged": {
        "*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.{njk,json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@fontsource/ibm-plex-mono": "^5.2.6"
    }
}
