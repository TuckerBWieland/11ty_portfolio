{
    "name": "tucker-wieland-portfolio",
    "version": "1.0.0",
    "description": "Tucker Wieland's professional portfolio website",
    "main": "index.js",
    "scripts": {
        "build": "eleventy",
        "build:css": "tailwindcss -i ./src/css/main.css -o ./_site/css/main.css",
        "dev": "eleventy --serve --watch",
        "start": "npm run dev",
        "lint": "npm run lint:js && npm run lint:css && npm run lint:format",
        "lint:js": "eslint src/js/**/*.js",
        "lint:js:fix": "eslint src/js/**/*.js --fix",
        "lint:css": "stylelint src/css/**/*.css",
        "lint:css:fix": "stylelint src/css/**/*.css --fix",
        "lint:format": "prettier --check \"src/**/*.{js,css,njk,json,md}\"",
        "lint:format:fix": "prettier --write \"src/**/*.{js,css,njk,json,md}\"",
        "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:format:fix",
        "lint:check": "npm run lint"
    },
    "keywords": [
        "portfolio",
        "strategy",
        "operations",
        "executive",
        "business",
        "consulting"
    ],
    "author": "Tucker Wieland",
    "license": "MIT",
    "devDependencies": {
        "@11ty/eleventy": "^3.1.2",
        "@11ty/eleventy-img": "^6.0.4",
        "autoprefixer": "^10.4.16",
        "html-minifier-terser": "^7.2.0",
        "postcss": "^8.4.32",
        "postcss-cli": "^11.0.0",
        "tailwindcss": "^3.4.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.{njk,json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@fontsource/ibm-plex-mono": "^5.2.6"
    }
}
