<header role="banner">
  <nav role="navigation" aria-label="Main navigation">
    <ul>
      {% for item in nav | sort(false, false, 'order') %}
        <li>
          <a href="{{ item.url }}" 
             {% if page.url == item.url %}aria-current="page"{% endif %}>
            {{ item.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>
