<section class="bg-background-primary py-8 w-max-2xl">
    <div class="max-w-content mx-auto px-4 xs:px-5 md:px-11">
        
        {% from "macros/split-title.njk" import SplitTitle %}
        <!-- Section title - Single responsive version -->
        <div class="mb-12 xs:mb-16 md:mb-20 ">
            {{ SplitTitle('CONTACT', 'ME') }}
        </div>

        <!-- Contact cards - Single responsive version -->
        <div class="flex flex-row justify-center items-center sm:grid sm:grid-cols-2">
            <div class="hidden sm:block"></div>
            <div class="flex gap-4">
                <!-- LinkedIn card -->
                <a href="https://www.linkedin.com/in/tucker-wieland/" target="_blank" rel="noopener noreferrer" class="w-full xs:w-auto transition-transform duration-200 ease-in-out hover:shadow-2xl social-card">
                    <!-- Responsive card layout -->
                    <div class="flex flex-col justify-between border-2 border-[#6A686C] w-[165px] md:w-[180px] h-[235px]">
                        
                        <!-- Icon area - Mobile: inline with button, Desktop: large centered -->
                        <div class="flex items-center justify-center gap-4 p-4">
                            <!-- Icon container -->
                            <div class="social-icon-container linkedin">
                                <img src="static/linkedin-icon.svg" alt="linkedin icon" class="w-150px h-150px social-icon" />
                            </div>
                        </div>
                        
                        <div class="bg-[#6A686C] h-12 flex items-center px-4 transition-all duration-200 social-button">
                            <div class="flex items-center justify-between w-full">
                                <span class="font-mono font-semibold text-text-primary text-lg uppercase tracking-wide">LINKEDIN</span>
                                <svg class="w-6 h-6 text-text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </a>
                
                <!-- GitHub card -->
                <a href="https://github.com/TuckerBWieland/" target="_blank" rel="noopener noreferrer" class="w-full xs:w-auto transition-transform duration-200 ease-in-out hover:shadow-2xl social-card">
                    <!-- Responsive card layout -->
                    <div class="flex flex-col justify-between border-2 border-[#6A686C] w-[165px] md:w-[180px] h-[235px]">
                        
                        <!-- Icon area - Mobile: inline with button, Desktop: large centered -->
                        <div class="flex items-center justify-center gap-4 p-4">
                            <!-- Icon container -->
                            <div class="social-icon-container github">
                                <img src="static/github-icon.svg" alt="github icon" class="w-150px h-150px social-icon" />
                            </div>
                        </div>
                        
                        <div class="bg-[#6A686C] h-12 flex items-center px-4 transition-all duration-200 social-button">
                            <div class="flex items-center justify-between w-full">
                                <span class="font-mono font-semibold text-text-primary text-lg uppercase tracking-wide">GITHUB</span>
                                <svg class="w-6 h-6 text-text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        
    </div>
</section>