{# Contact Me Component #}
<section class="bg-background-primary py-32">
  <div class="max-w-content mx-auto px-30">
    
    {# Section title #}
    <div class="mb-15">
      <h2 class="font-helvetica font-bold text-h2 text-text-primary uppercase leading-none">
        <div>CONTACT</div>
        <div class="ml-[416px]">ME</div>
      </h2>
    </div>

    {# Contact cards #}
    <div class="flex gap-[60px] items-center justify-center max-w-[600px] mx-auto">
      
      {# GitHub card #}
      <div class="relative w-[180px] border-2 border-lines">
        <div class="w-[180px] h-[180px] bg-background-secondary flex flex-col items-center justify-center">
          <div class="w-9 h-9 mb-[13px]">
            {# GitHub icon placeholder #}
            <div class="w-full h-full bg-text-primary/20 rounded"></div>
          </div>
          <div class="w-[116px] h-4">
            {# GitHub text placeholder #}
            <div class="w-full h-full bg-text-primary/20 rounded"></div>
          </div>
        </div>
        <div class="bg-orange h-[55px] flex items-center justify-start gap-3 px-3 py-3 w-full">
          <div class="font-mono font-semibold text-button-big text-text-primary tracking-button uppercase">
            GitHub
          </div>
          <div class="w-6 h-6">
            {# Arrow icon placeholder #}
            <div class="w-full h-full bg-text-primary/20 rounded"></div>
          </div>
        </div>
      </div>
      
      {# LinkedIn card #}
      <div class="relative w-[180px] border-2 border-lines">
        <div class="w-[180px] h-[180px] bg-background-secondary flex flex-col items-center justify-center">
          <div class="w-9 h-9 mb-[13px]">
            {# LinkedIn icon placeholder #}
            <div class="w-full h-full bg-text-primary/20 rounded"></div>
          </div>
          <div class="w-[116px] h-4">
            {# LinkedIn text placeholder #}
            <div class="w-full h-full bg-text-primary/20 rounded"></div>
          </div>
        </div>
        <div class="bg-blue h-[55px] flex items-center justify-start gap-3 px-3 py-3 w-full">
          <div class="font-mono font-semibold text-button-big text-text-primary tracking-button uppercase">
            LinkedIn
          </div>
          <div class="w-6 h-6">
            {# Arrow icon placeholder #}
            <div class="w-full h-full bg-text-primary/20 rounded"></div>
          </div>
        </div>
      </div>
      
    </div>
    
  </div>
</section>
