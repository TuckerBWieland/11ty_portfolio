            document.getElementById('loading-state').classList.add('hidden');
        },

        showErrorState() {
            document.getElementById('loading-state').classList.add('hidden');
            document.getElementById('error-state').classList.remove('hidden');
        },

        // Render project list
        renderProjects() {
            const projectList = document.getElementById('project-list');
            
            // Clear loading and error states
            this.hideLoadingState();
            document.getElementById('error-state').classList.add('hidden');
            
            // Clear existing projects
            const existingProjects = projectList.querySelectorAll('.project-item');
            existingProjects.forEach(item => item.remove());
            
            // Render each project
            this.projects.forEach((project) => {
                const projectDiv = document.createElement('div');
                projectDiv.className = 'project-item border-t border-[#6A686C] py-6 cursor-pointer transition-colors duration-200 hover:bg-white hover:bg-opacity-5';
