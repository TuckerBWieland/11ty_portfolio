                projectDiv.innerHTML = this.renderProjectRow(project);
                projectList.appendChild(projectDiv);
            });
            
            // Add final border
            const finalBorder = document.createElement('div');
            finalBorder.className = 'border-t border-[#6A686C]';
            projectList.appendChild(finalBorder);
        },

