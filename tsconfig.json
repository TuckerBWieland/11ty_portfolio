{
    "compilerOptions": {
        "target": "ES2020",
        "module": "None",
        "moduleResolution": "node",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist/scripts",
        "rootDir": "./src/scripts",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": false,
        "noEmitOnError": false
    },
    "include": ["src/scripts/**/*"],
    "exclude": ["node_modules", "_site", "dist"]
}
